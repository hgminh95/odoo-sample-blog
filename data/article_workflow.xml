<openerp>
    <data>
        <!-- Workflow -->
        <record model="workflow" id="wkf_article">
            <field name="name">Blog Article Workflow</field>
            <field name="osv">blog.article</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activities -->
        <record model="workflow.activity" id="wkf_article_draft">
            <field name="name">Draft</field>
            <field name="wkf_id" ref="wkf_article"/>
            <field name="flow_start" eval="True"/>
            <field name="kind">function</field>
            <field name="action">action_draft()</field>
        </record>

        <record model="workflow.activity" id="wkf_article_review">
            <field name="name">In Review</field>
            <field name="wkf_id" ref="wkf_article"/>
            <field name="kind">function</field>
            <field name="action">action_review()</field>
        </record>

        <record model="workflow.activity" id="wkf_article_done">
            <field name="name">Done</field>
            <field name="wkf_id" ref="wkf_article"/>
            <field name="kind">function</field>
            <field name="action">action_done()</field>
        </record>

        <!-- Transitions -->
        <record model="workflow.transition" id="article_draft_to_review">
            <field name="act_from" ref="wkf_article_draft"/>
            <field name="act_to" ref="wkf_article_review"/>
            <field name="signal">review</field>
        </record>

        <record model="workflow.transition" id="article_review_to_draft">
            <field name="act_from" ref="wkf_article_review"/>
            <field name="act_to" ref="wkf_article_draft"/>
            <field name="group_id" ref="blog.moderator"/>
            <field name="signal">draft</field>
        </record>

        <record model="workflow.transition" id="article_review_to_done">
            <field name="act_from" ref="wkf_article_review"/>
            <field name="act_to" ref="wkf_article_done"/>
            <field name="group_id" ref="blog.moderator"/>
            <field name="signal">done</field>
        </record>
    </data>
</openerp>
